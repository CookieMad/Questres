<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fireStone"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="489dp"
            android:text="Ты подходишь к камину и внезапно, каменная статуя собаки оживат и набрасывается на тебя. Ты успеваешь отпрыгнуть назад и от твоей кончины собаку останавливает ошейник с цепью. Она голодными глазами смотрит на тебя и громко рычит"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/button"
            android:onClick="back"
            android:rotationX="0.95"
            android:text="Назад"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/button"
            android:onClick="doger"
            android:scaleX="0.95"
            android:text="Дать собаке еды"
            android:textSize="30sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/button"
            android:onClick="coaler"
            android:scaleX="0.95"
            android:text="Взять уголь"
            android:textSize="30sp"
            android:visibility="gone" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>