<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="starter"
    android:background="@drawable/back"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ты, офисный клерк почти ничего не добившийся. Твоим величайшим достижением была девушка, что завтра должна была стать твоей женой, а сейчас кинула тебя и летит на юг с каким-то мажорчиком в самолете. Медленно проходя мимо стройки, ты думаешь о своей никчемной жизни, как внезапно замечаешь прохожих. Все они в ужасе застыли устремив взгляд куда-то вверх. Ты тоже посмотрел на небо… Железные строительные балки – вот последнее что ты увидел перед своей смертью……"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@drawable/button"
            android:onClick="nextLife"
            android:scaleX="0.95"
            android:text="Что дальше?"
            android:textSize="30sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>